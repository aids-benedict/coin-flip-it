generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth models removed - now using Supabase Auth (auth.users table)

model Decision {
  id                 String   @id @default(cuid())
  userId             String   // References auth.users.id (UUID) - managed by Supabase
  question           String
  options            String
  analysis           String
  weights            String
  result             String
  explanation        String
  initialChoice      String?  // What user picked BEFORE seeing analysis
  finalChoice        String?  // What user actually decided AFTER seeing analysis & coin flip
  clarifyingAnswers  String?  // JSON of Q&A pairs for learning
  createdAt          DateTime @default(now())

  @@index([userId, createdAt])
}
